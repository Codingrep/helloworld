<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>deployment-zip</id>
	<baseDirectory/>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<outputDirectory/>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>**/*.gitkeep</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/zip</directory>
			<outputDirectory/>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>**/*.gitkeep</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>
