<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<baseDirectory/>
	<formats>
		<format>zip</format>
	</formats>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>${project.groupId}:${project.parent.artifactId}-ear:ear</include>
			</includes>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<outputDirectory>./${application.deployment.name}</outputDirectory>
			<outputFileNameMapping>${application.deployment.name}.ear</outputFileNameMapping>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>${project.groupId}:${project.parent.artifactId}-zip:zip:deployment-zip</include>
			</includes>
			<outputFileNameMapping>${application.deployment.name}.zip</outputFileNameMapping>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<outputDirectory>./</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
